  fnInit ${FUNCNAME} "$@"  && return 0
  #
  [[ -d $1 ]] && [[ -w $1 ]] && return 0
  return 1
}

function isExecuted () {
  fnInit "${FUNCNAME}.20190206" "$@"  && return 0
  #
  [[ "${FUNCNAME[1]}" == "source" ]]  && { return 1; }
  ### the caller "function" name in ${FUNCNAME[1]} will be...
  ###   "source"     if sourced
  ###   "main" or "" if executed
  #
  return 0
  ### executed
}

