  fnInit ${FUNCNAME} "$@"  && return 0
  #
  [[ $UI == CLI ]] && return 0
  return 1
}

function inGUI () {
  fnInit ${FUNCNAME} "$@"  && return 0
  #
  [[ $UI == GUI ]] && return 0
  return 1
}

